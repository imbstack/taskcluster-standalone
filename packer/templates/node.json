{
  "variables": {
    "service": null,
    "docker_org": "imbstack"
  },
  "builders": [
    {
      "type": "docker",
      "image": "node:7",
      "commit": true,
      "changes": [
        "ENTRYPOINT [\"node\", \"lib/main.js\"]",
        "WORKDIR /service"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/node.sh",
      "environment_vars": ["GIT_REPO=https://github.com/taskcluster/{{user `service`}}.git"]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `docker_org`}}/{{user `service`}}"
      },
      "docker-push"
    ]
  ]
}
